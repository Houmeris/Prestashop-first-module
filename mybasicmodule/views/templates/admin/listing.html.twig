{% extends "PrestaShopBundle:Admin:layout.html.twig" %}
{% block content %}

<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Username</th>
    </tr>
  </thead>
  <tbody>
  {% for comment in data %}
    <tr>
      <th scope="row">{{ comment.id }}</th>
      <td>{{ comment.name }}</td>
      <td class="active">{{ comment.description }}</td>
      <td><button class="btn btn-outline-danger">Delete</button>
      <a href="{{ path("blog_update", {id: comment.id}) }}" class="btn btn-outline-primary">Update</button></td>
    </tr>
  {% endfor %}

  </tbody>
</table>

{% endblock %}